<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:padding="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:id="@+id/ingredient_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trader Joe's"/>

        <TextView
            android:layout_below="@id/ingredient_brand"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:id="@+id/ingredient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Chocolate Almond Bark Thins"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/fat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fat: 18g"/>

        <TextView
            android:gravity="center"
            android:id="@+id/carbs"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Carbs: 18g"/>

        <TextView
            android:gravity="center"
            android:id="@+id/protein"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Protein: 5g"/>

        <TextView
            android:gravity="center"
            android:id="@+id/fiber"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fiber: 4g"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/fat_cals"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="160 cals"/>

        <TextView
            android:gravity="center"
            android:id="@+id/carbs_cals"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="40 cals"/>

        <TextView
            android:gravity="center"
            android:id="@+id/protein_cals"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="20 cals"/>

        <TextView
            android:gravity="center"
            android:id="@+id/total_cals"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="220 tot. cals"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/fat_percent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="73%"/>

        <TextView
            android:gravity="center"
            android:id="@+id/carbs_percent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="18%"/>

        <TextView
            android:gravity="center"
            android:id="@+id/protein_percent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9%"/>

        <TextView
            android:gravity="center"
            android:id="@+id/serving_size_grams"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Serving 42g"/>

    </LinearLayout>

    <TextView
        android:id="@+id/notes"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes: High in Saturated Fat."/>

</LinearLayout>
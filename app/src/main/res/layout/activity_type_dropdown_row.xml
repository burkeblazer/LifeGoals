<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/activity_icon"
        android:background="@drawable/bike_icon"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_toRightOf="@id/activity_icon"
        android:layout_centerVertical="true"
        android:id="@+id/activity_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/activity_color"
        android:layout_width="30dp"
        android:layout_height="30dp"></LinearLayout>

</RelativeLayout>
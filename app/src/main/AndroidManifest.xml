<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bblazer.com.lifegoals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".LifeGoalsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewGoal"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AddEvent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Integrations.ModifyIntegrationsActivity" />
        <activity android:name=".ViewGoalActivity" />
        <activity
            android:name=".SettingsActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".AddFood" />
        <activity android:name=".FoodOverview" />
        <activity
            android:name=".AddMeal"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".WeightLossActivity" />
        <activity
            android:name=".TimeToEatActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".EatMealActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MealCreator" />
        <activity android:name=".RecordMeal" />
        <activity android:name=".IngredientActivity" />
        <activity android:name=".AddIngredient"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bblazer.com.lifegoals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".LifeGoalsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Add.AddNewGoal"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Add.AddEvent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Integrations.ModifyIntegrationsActivity" />
        <activity android:name=".Activity.ViewGoalActivity" />
        <activity
            android:name=".Activity.SettingsActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".Add.AddFood" />/>
        <activity
            android:name=".Add.AddMeal"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Utility.CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Activity.WeightLossActivity" />
        <activity
            android:name=".Activity.TimeToEatActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.EatMealActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.MealCreator" />
        <activity android:name=".Activity.RecordMeal" />
        <activity android:name=".Activity.IngredientActivity" />
        <activity android:name=".Activity.EditStoresActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.AddNewStoreActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Add.AddIngredient"></activity>
    </application>

</manifest>